<p id="notice"><%= notice %></p>

<h3>Last rankings</h3>
<% RankingImport.order(rank_date: :desc).limit(10).each do |r| %>
	<% if r == @ranking_import %>
	<b><%= link_to r.rank_date.strftime("%B %Y"), ranking_import_path(r) + "?type=Herrer single" %> |</b>
	<% else %>
	<%= link_to r.rank_date.strftime("%B %Y"), ranking_import_path(r) + "?type=Herrer single" %> |
	<% end %>
<% end %>
<hr/>


<p>
  <strong>Rank date:</strong>
  <%= @ranking_import.rank_date %>
</p>

<p>
  <strong>Title:</strong>
  <%= @ranking_import.title %>
</p>
<%= link_to "Senior Herrer Single", ranking_import_path(@ranking_import) + "?type=Herrer single" %> | 
<%= link_to "Senior Damer Single", ranking_import_path(@ranking_import) + "?type=Damer single" %> | 
<%= link_to "Junior Gutter Single", ranking_import_path(@ranking_import) + "?type=Junior gutter single" %> | 
<%= link_to "Junior Jenter Single", ranking_import_path(@ranking_import) + "?type=Junior jenter single" %> | 
<hr/>
<% @arr.each do |rankings| %>
<table>
  <thead>
    <tr>
      <th>Rank</th>
      <th>Navn</th>
      
      <th>FÃ¸deselsÃ¥r</th>
 
      
      
      <th>Reliability</th>
      <th>Utr</th>

    </tr>
  </thead>

  <tbody>
    <% num = 0 %>
    <% duplicates = 0 %>
    <% last_rank = Ranking.new %>
    
    <% rankings.each do |rank| %>
    
      <tr>
        
        <% if rank.utr == last_rank.utr %>
          <td><%= num  %></td>
          <% duplicates = duplicates + 1 %>
        <% else %>
          <% if duplicates == 0 %>
          	<td><%= num = num + 1  %></td>
          <% else %>
          	<td><%= num = num + duplicates + 1  %></td>
          	<% duplicates = 0 %>
          <% end %>
        <% end %>

        <td><%= link_to rank.player.name, "https://myutr.com/profiles/" + rank.player.utr_player_id.to_s  %></td>
        <td><%= rank.player.birthyear %></td>
        <td><%= rank.reliability %></td>
        <td><%= rank.utr %></td>
        
      </tr>
      <% last_rank = rank %>
    <% end %>
  </tbody>
</table>
<br/> <br/>
<% end %>
<br>
<%= form_tag import_ranking_imports_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= hidden_field_tag :ranking_import_id, @ranking_import.id %>
  <%= submit_tag "Import" %>
  <% end %>
<%= link_to 'Edit', edit_ranking_import_path(@ranking_import) %> |
